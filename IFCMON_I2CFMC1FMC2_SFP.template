{
    field(DESC, "type: $(DESCR)")
    field(DTYP, "regDevAsyn")
    field(INP , "@$(I2CBUSSFP)A0/40 T=STRING L=20")
    field(PRIO, "LOW")
    field(FLNK, "$(IOC):$(SUBDEV)-SFP-$(SFPFCT)-TEMP-MSB")
}

# Temperature measurement
