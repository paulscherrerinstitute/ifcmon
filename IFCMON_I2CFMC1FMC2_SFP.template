{
    field(DESC, "TEMP-MSB: $(DESCR)")
    field(DTYP, "regDevAsyn")
    field(INP , "@$(I2CBUSSFP)A2/96 T=UINT8")
    field(PRIO, "LOW")
    field(FLNK, "$(IOC):$(SUBDEV)-SFP-$(SFPFCT)-TEMP-LSB")
}
